{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": [
		"**/dist/**",
		"**/node_modules/**",
		"eslint.config.mjs"
	]
}
